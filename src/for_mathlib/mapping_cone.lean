def biproduct_bicone_is_prod : is_limit (biproduct_bicone X Y).to_cone :=
{ lift := Œª (Z : binary_fan _ _), biproduct.lift Z.fst Z.snd,
  uniq' := by { intros, delta binary_fan.fst binary_fan.snd, ext; simp [‚Üê w] } }
