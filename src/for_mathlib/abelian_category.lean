  { introsI, apply is_zero_kernel_of_mono },
  { intros h,
    rw abelian.mono_iff_kernel_Œπ_eq_zero,
    apply h.eq_of_src }
end

lemma is_zero_initial {C : Type*} [category C] [abelian C] : is_zero (‚ä•_ C) :=
