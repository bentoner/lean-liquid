    { show (e.inv ‚â´ e.hom).hom‚ÇÉ = _, rw iso.inv_hom_id, refl },

    { exact e.hom.comm‚ÇÅ },
    { exact e.hom.comm‚ÇÇ },
    { exact e.hom.comm‚ÇÉ }
