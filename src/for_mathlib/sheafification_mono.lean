      fun_like.congr_fun this (free_abelian_group.of punit.star), },
  apply limit.hom_ext,
  intro j,
  ext x, cases x,
  simpa only [t', AddCommGroup.of_hom, free_abelian_group.lift.of, comp_apply, map_zero,
    add_monoid_hom.zero_apply] using ht j,
end

